{
  "name": "tools-pwa",
  "author": "IOP Global GmbH",
  "homepage": "https://bc2ip.com/",
  "version": "2.0.0",
  "versionCode": "2",
  "nextVersion": "2.0.0",
  "nextVersionIncrement": "major",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "copy-android:devnet": "ionic capacitor copy android --configuration=mobile-devnet",
    "copy-android:mainnet": "ionic capacitor copy android --configuration=mobile-mainnet",
    "run-android:devnet": "ionic capacitor run android --configuration=mobile-devnet",
    "run-android:mainnet": "ionic capacitor run android --configuration=mobile-mainnet",
    "run-android-live:devnet": "ionic capacitor run android --configuration=mobile-devnet -l --external",
    "run-android-live:mainnet": "ionic capacitor run android --configuration=mobile-mainnet -l --external",
    "copy-ios:devnet": "ionic capacitor copy ios --configuration=mobile-devnet",
    "copy-ios:mainnet": "ionic capacitor copy ios --configuration=mobile-mainnet",
    "run-ios:devnet": "ionic capacitor run ios --configuration=mobile-devnet",
    "run-ios:mainnet": "ionic capacitor run ios --configuration=mobile-mainnet",
    "build-android:devnet": "npm run copy-android:devnet && ionic capacitor sync --configuration=mobile-devnet && npx cap open android",
    "build-android:mainnet": "npm run copy-android:mainnet && ionic capacitor sync --configuration=mobile-mainnet && npx cap open android"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^15.0.0",
    "@angular/core": "^15.0.0",
    "@angular/forms": "^15.0.0",
    "@angular/platform-browser": "^15.0.0",
    "@angular/platform-browser-dynamic": "^15.0.0",
    "@angular/router": "^15.0.0",
    "@capacitor/android": "4.7.1",
    "@capacitor/app": "4.1.1",
    "@capacitor/core": "4.7.1",
    "@capacitor/filesystem": "^4.1.4",
    "@capacitor/haptics": "4.1.0",
    "@capacitor/ios": "^4.7.3",
    "@capacitor/keyboard": "4.1.1",
    "@capacitor/status-bar": "4.1.1",
    "@internet-of-people/sdk": "^5.1.0",
    "@ionic/angular": "^7.0.0",
    "@zip.js/zip.js": "^2.6.78",
    "check-password-strength": "^2.0.7",
    "crypto-browserify": "^3.12.0",
    "hash-wasm": "^4.9.0",
    "ionicons": "^7.0.0",
    "luxon": "^3.3.0",
    "rxjs": "~7.5.0",
    "stream-browserify": "^3.0.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
