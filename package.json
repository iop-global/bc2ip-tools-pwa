    "@angular-devkit/build-angular": "^15.0.0",
    "@angular-eslint/builder": "^15.0.0",
    "@angular-eslint/eslint-plugin": "^15.0.0",
    "@angular-eslint/eslint-plugin-template": "^15.0.0",
    "@angular-eslint/schematics": "^15.0.0",
    "@angular-eslint/template-parser": "^15.0.0",
    "@angular/cli": "^15.0.0",
    "@angular/compiler": "^15.0.0",
    "@angular/compiler-cli": "^15.0.0",
    "@angular/language-service": "^15.0.0",
    "@angular/localize": "^15.2.5",
    "@capacitor/cli": "4.7.1",
    "@ionic/angular-toolkit": "^9.0.0",
    "@types/jasmine": "~4.0.0",
    "@types/luxon": "^3.2.0",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "5.3.0",
    "@typescript-eslint/parser": "5.3.0",
    "capacitor-set-version": "^2.0.13",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsdoc": "30.7.6",
    "eslint-plugin-prefer-arrow": "1.2.2",
    "eslint-plugin-prettier": "^4.2.1",
    "jasmine-core": "~4.3.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "prettier": "^2.8.7",
    "prettier-eslint": "^15.0.1",
    "release-it": "^15.9.3",
    "ts-node": "~8.3.0",
    "typescript": "~4.8.4"
  },
  "release-it": {
    "git": {
      "changelog": "npx auto-changelog -p --sort-commits date-desc --commit-limit false -u --commit-url 'https://github.com/iop-global/bc2ip-tools-pwa/commit/{id}' --compare-url 'https://github.com/iop-global/bc2ip-tools-pwa/compare/{from}..{to}' --unreleased-only --hide-credit"
    },
    "hooks": {
      "after:bump": "npx auto-changelog -p --sort-commits date-desc --commit-limit false -u --commit-url 'https://github.com/iop-global/bc2ip-tools-pwa/commit/{id}' --unreleased false --hide-credit "
    }
  }
}
